#ifndef LEXICAL_H

// EOFの文字コードを設定
#define EOF '\x7f'      //ASCII, UTF-8でDEL文字

// 予約語のトークン番号
#define LxNO        0       //NO
#define LxLD        1       //LD
#define LxST        2       //ST

#define LxADD       3      //ADD
#define LxSUB       4      //SUB
#define LxCMP       5      //CMP
#define LxAND       6      //AND
#define LxOR        7      //OR
#define LxXOR       8      //XOR

#define LxSHLA      9      //SHLA
#define LxSHLL      10      //SHLL
#define LxSHRA      11      //SHRA
#define LxSHRL      12      //SHRL3
#define LxJMP       13      //JMP
#define LxJZ        14      //JZ
#define LxJC        15      //JC
#define LxJM        16      //JM
#define LxJNZ       17      //JNZ
#define LxJNC       18      //JNC
#define LxJNM       19      //JNM
#define LxCALL      20      //CALL

#define LxPUSH      21      //PUSH
#define LxPUSHF     22      //PUSHF
#define LxPOP       23      //POP
#define LxPOPF      24      //POPF

#define LxIN        25      //IN
#define LxOUT       26      //OUT
#define LxEI        27      //EI
#define LxDI        28      //DI
#define LxRET       29      //RET
#define LxRETI      30      //RETI
#define LxHALT      31      //HALT

#define LxEQU       32      //EQU
#define LxORG       33      //ORG
#define LxDS        34      //DS
#define LxDC        35      //DC

#define LxRsvNum      36      //予約語の数

//レジスタのトークン番号
#define LxG0        40     //G0
#define LxG1        41     //G1
#define LxG2        42     //G2
#define LxSP        43     //SP

//トークンタイプを表すトークン番号
#define LxLABEL       100     //ラベル
#define LxSTRING      101     //文字列
#define LxSPACE       102     //SPACE
#define LxSHARP       103     //イミディエイト
#define LxCOMMA       104     // , カンマ
#define LxSCORON      105     // ; セミコロン
#define LxVALUE       106     //10進文字列、16進文字列、文字定数
#define LxPLUS        107     // '+'
#define LxMINUS       108     // '-'
#define LxMULTIPUL    109     // '*'
#define LxDIVIDE      110     // '/'
#define LxENTER       111     //改行
#define LxEOF         112     //End Of File
#define LxEOL         113
#define LxLBR         114     // '(' 左括弧
#define LxRBR         115     // ')' 右括弧

#define LENGTH 80

// 予約語の一覧表
struct RsvWord {
  char[] token;                         /* つづり */
  int  rsvword_id;                    /* トークン値の組 */
};

public char getCh();
public int getDigit();
public int getToken();
public void skipToNewLineOrEOF();
public boolean getLabel();
public char[] getLxStr();

public void initLexical();
public void setLxFp(FILE file);
#endif      /* LEXICAL_H */
